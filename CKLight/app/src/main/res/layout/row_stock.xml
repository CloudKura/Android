<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:focusable="false"
        >

        <View
            android:id="@+id/row_stock_limit_mark"
            android:layout_width="12dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="@android:color/holo_red_light"
            android:focusable="false"
            />

        <TextView
            android:id="@+id/row_item_info_remain_days_label"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:layout_marginStart="3dp"
            android:background="@drawable/ic_calorie"
            />

        <TextView
            android:id="@+id/row_item_info_remain_days"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:gravity="center|end"
            android:text="1234日"
            android:textColor="@color/colorNormal"
            android:textSize="7pt" />

        <TextView
            android:id="@+id/row_item_info_limit_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:gravity="center"
            android:text="2020/12/31"
            android:textColor="@color/colorNormal"
            android:textSize="7pt" />

        <TextView
            android:id="@+id/row_stock_item_count"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|end"
            android:text="1,000"
            android:textColor="@color/colorNormal"
            android:textSize="8pt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|end"
            android:layout_marginStart="5dp"
            android:text="@string/notify_item_unit"
            android:textColor="@color/colorNormal"
            android:textSize="6pt" />

        <!-- 削除ボタン -->
        <Button
            android:id="@+id/row_stock_delete_commit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:textColor="@android:color/white"
            android:background="@drawable/ic_delete_stock"
            android:focusable="false"
            android:textSize="8pt"
            android:visibility="gone"
            />

    </LinearLayout>

</LinearLayout>
