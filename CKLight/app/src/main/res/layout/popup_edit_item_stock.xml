<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_popup_frame"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fragment_item_settings_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_dialog_title"
            android:padding="10dp"
            android:gravity="center"
            android:text="@string/edit_item_title_stock"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/popup_edit_item_stock_close_button"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignEnd="@+id/fragment_item_settings_title"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_cancel" />
    </RelativeLayout>

    <include
        android:id="@+id/fragment_item_new_row_item_stock"
        layout="@layout/row_edit_item_stock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <!-- ボタン -->
    <Button
        android:id="@+id/popup_edit_item_stock_regist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_button_regist"
        android:text="ストックを追加"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="20dp" />

</LinearLayout>