    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@android:color/white"/>

    <!-- 設定変更 -->
    <TextView
        android:id="@+id/nav_head_text_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/nav_font_size_title"
        android:text="@string/left_menu_setting"
        android:textColor="@color/colorTextColor"
        android:gravity="center_vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:drawableStart="@drawable/ic_settings"
        android:drawableEnd="@drawable/ic_action_next"
        android:drawablePadding="10dp"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="5dp"
            >

            <TextView
                android:id="@+id/nav_drawer_text_alert_onoff_title"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:text="@string/left_menu_alert_onoff_title"
                android:textColor="@color/colorTextColor"
                android:textSize="14dp"
                />

            <TextView
                android:id="@+id/nav_drawer_text_alert_onoff_value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center"
                android:layout_marginStart="10dp"
                android:textColor="@color/colorTextColor"
                android:text="@string/messeage_setting_do"
                android:textSize="18dp"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="5dp"
            >

            <TextView
                android:id="@+id/nav_drawer_text_alert_span_title"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:text="@string/left_menu_alert_span_title"
                android:textColor="@color/colorTextColor"
                android:textSize="14dp"
                />

            <TextView
                android:id="@+id/nav_drawer_text_alert_span_value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center"
                android:layout_marginStart="10dp"
                android:textColor="@color/colorTextColor"
                android:text="7"
                android:textSize="18dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center"
                android:layout_marginStart="10dp"
                android:textColor="@color/colorTextColor"
                android:text="@string/messeage_setting_days_ago"
                android:textSize="14dp"
                />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@android:color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <View
                android:layout_width="25dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:background="@android:color/white" />

            <View
                android:id="@+id/nav_drawer_color_exclamation"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginStart="-23dp"
                android:background="@color/colorExclamation" />

            <TextView
                android:id="@+id/nav_drawer_text_exclamation"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical|center"
                android:text="@string/limit_day_over"
                android:textColor="@color/colorTextColor"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="20dp"
            android:orientation="horizontal">

            <View
                android:layout_width="25dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:background="@android:color/white" />

            <View
                android:id="@+id/nav_drawer_color_alert"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginStart="-23dp"
                android:background="@color/colorAlert" />

            <TextView
                android:id="@+id/nav_drawer_text_alert"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical|center"
                android:text="@string/limit_day_in1month"
                android:textColor="@color/colorTextColor"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="20dp"
            android:orientation="horizontal">

            <View
                android:layout_width="25dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:background="@android:color/white" />

            <View
                android:id="@+id/nav_drawer_color_info"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginStart="-23dp"
                android:background="@color/colorInfo" />

            <TextView
                android:id="@+id/nav_drawer_text_info"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical|center"
                android:text="@string/limit_day_in1year"
                android:textColor="@color/colorTextColor"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:orientation="horizontal"
            >

            <View
                android:layout_width="25dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:background="@android:color/white" />

            <View
                android:id="@+id/nav_drawer_color_noinformation"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginStart="-23dp"
                android:background="@color/colorNoInformation" />

            <TextView
                android:id="@+id/nav_drawer_text_noinformation"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical|center"
                android:text="@string/limit_day_other"
                android:textColor="@color/colorTextColor"
                android:textSize="14dp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@android:color/white"/>

    <TextView
        android:id="@+id/nav_head_text_cklink_howtouse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ic_link_cloud"
        android:gravity="center_vertical"
        android:paddingBottom="15dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="15dp"
        android:text="@string/left_menu_move_to_web_link"
        android:textColor="@color/colorTextColor"
        android:textSize="@dimen/nav_font_size_value" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@android:color/white"/>

    <TextView
        android:id="@+id/nav_copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/nav_font_size_copy_right"
        android:textColor="@color/colorTextColor"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="@string/left_menu_copy_right" />

</LinearLayout>
