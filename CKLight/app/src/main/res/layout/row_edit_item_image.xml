<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_edit_item_image_layer"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.cloudkura.light.ui.camera.CameraSourcePreview
            android:id="@+id/row_edit_item_image_camera_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <ImageView
            android:id="@+id/row_edit_item_image_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@mipmap/no_photo"
            android:padding="4dp"
            android:background="@drawable/ic_image_frame"
            />

        <LinearLayout
            android:id="@+id/row_edit_item_image_item_name_layer"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="vertical"
            android:background="@color/colorStockCountLabelInGrid"
            >
            <TextView
                android:id="@+id/row_edit_item_image_item_name_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/edit_item_title_memo"
                android:textColor="@color/colorTextColor"
                android:textSize="13dp"
                android:gravity="start"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                />

            <TextView
                android:id="@+id/row_edit_item_image_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="１２３４５６７８９０１２３４５６７８９０１２３４５６７８９０１２３４５６７８９０"
                android:textColor="@color/colorTextColor"
                android:textSize="14dp"
                android:gravity="start"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                />

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="-75dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="-20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/row_edit_item_image_flash_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:padding="10dp"
                android:background="@drawable/ic_action_camera_button"
                android:src="@drawable/ic_flash_off"
                />

            <ImageView
                android:id="@+id/row_edit_item_image_switch_frame"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:background="@drawable/ic_action_barcode_button"
                android:src="@drawable/ic_action_barcode_snap" />

        </LinearLayout>

        <Button
            android:id="@+id/row_edit_item_image_camera_shutter"
            android:background="@drawable/ic_action_camera_button"
            android:drawableTop="@drawable/ic_camera_snap"
            android:paddingTop="30dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/row_edit_item_image_camera_button_title"
            android:text="@string/button_photography_item"
            android:textSize="12dp"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <TextView
        android:text="@string/message_cant_change_image_name_after_regist"
        android:textSize="10dp"
        android:textColor="@color/colorExclamation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        />

</LinearLayout>