<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:layout_marginTop="10dp"
    >

    <LinearLayout
        android:id="@+id/row_edit_item_stock_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/ic_card_frame"
            >
            <TextView
                android:textColor="@color/colorCloseText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:textSize="6pt"
                android:text="@string/limit_day_tab"
                android:gravity="center|start"
                />

            <com.cloudkura.light.MyDatePicker
                android:id="@+id/popup_edit_item_stock_limit_date"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:calendarViewShown="false"
                android:datePickerMode="spinner"
                android:spinnersShown="true"
                android:gravity="center"
                android:divider="@null"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/ic_card_frame"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:textColor="@color/colorCloseText"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:layout_height="wrap_content"
                android:textSize="6pt"
                android:text="@string/message_title_count"
                android:gravity="center|start"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="-10dp"
                android:layout_marginBottom="10dp"
                >
                <com.cloudkura.light.MyNumberPicker
                    android:id="@+id/popup_edit_item_stock_count_10"
                    android:layout_width="40dp"
                    android:layout_height="80dp"
                    android:divider="@null" />
                <com.cloudkura.light.MyNumberPicker
                    android:id="@+id/popup_edit_item_stock_count_1"
                    android:layout_width="40dp"
                    android:layout_height="80dp"
                    android:divider="@null" />
                <!--
                <NumberPicker
                    android:id="@+id/popup_edit_item_stock_count_10"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:divider="@null"
                    />
                <NumberPicker
                    android:id="@+id/popup_edit_item_stock_count_1"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    />
                -->
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>