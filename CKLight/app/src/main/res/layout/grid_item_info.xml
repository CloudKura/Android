<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/row_item_info_limit_mark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="3dp"
        android:paddingStart="1dp"
        android:paddingEnd="1dp"
        android:paddingBottom="1dp"
        android:background="@android:color/holo_red_light"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/ic_date"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:padding="2dp"
                >

                <TextView
                    android:id="@+id/row_item_info_remain_days_label"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="1dp"
                    android:gravity="center"
                    android:text="残り"
                    android:textColor="@color/colorNormal"
                    android:textSize="4pt" />

                <TextView
                    android:id="@+id/row_item_info_remain_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1234日"
                    android:textColor="@color/colorNormal"
                    android:textSize="6pt" />
            </LinearLayout>

            <TextView
                android:id="@+id/row_item_info_limit_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="-3dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical|end"
                android:text="2020/12/31"
                android:textColor="@color/colorNormal"
                android:textSize="6pt" />

            <TextView
                android:id="@+id/row_item_info_item_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="top"
                android:layout_marginTop="-1dp"
                android:layout_marginBottom="3dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:lines="2"
                android:text="あいうえおかきくけこさしすせそたちつてと"
                android:textColor="@color/colorCloseText"
                android:textSize="5pt" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/grid_item_info_container"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="-2dp"
            android:gravity="center"
            android:background="@drawable/ic_date"
            >

            <ImageView
                android:id="@+id/row_item_info_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:layout_margin="5dp"
                android:src="@mipmap/no_photo" />

            <TextView
                android:id="@+id/row_item_info_delete_select"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/colorDeleteSelect"
                android:gravity="center"
                android:text="@string/delete_selected_item_sign"
                android:textColor="@color/colorTextColor"
                android:textSize="60dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/row_item_info_item_count_layer"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginTop="-38dp"
            android:gravity="end"
            android:orientation="horizontal"
            android:background="@color/colorStockCountLabelInGrid"
            >

            <TextView
                android:id="@+id/row_item_info_item_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="10dp"
                android:padding="2dp"
                android:text="1234"
                android:gravity="bottom|end"
                android:textColor="@color/colorTextColor"
                android:textSize="13pt" />

            <TextView
                android:id="@+id/row_item_info_item_count_label"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:gravity="center|bottom"
                android:padding="2dp"
                android:text="@string/notify_item_unit"
                android:textColor="@color/colorTextColor"
                android:textSize="5pt" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>